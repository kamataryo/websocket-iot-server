{
  "name": "websocket-iot-server",
  "version": "1.0.0",
  "description": "This is a chat board server.",
  "main": "index.js",
  "scripts": {
    "start": "./bin/keygen.sh -y && nodemon --exec node_modules/.bin/babel-node -- ./src/index.js",
    "lint": "eslint . --ext=js --ext=jsx",
    "test": "NODE_PATH=./src/ ava",
    "build": "./bin/build.sh",
    "migrate": "babel-node ./src/migrate/index.js"
  },
  "ava": {
    "files": [
      "test/**/*.test.js"
    ],
    "require": [
      "babel-register",
      "mock-local-storage",
      "./test/helpers/set-test-env-up.js"
    ],
    "babel": "inherit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/KamataRyo/websocket-iot-server.git"
  },
  "author": "kamataryo",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/KamataRyo/websocket-iot-server/issues"
  },
  "homepage": "https://github.com/KamataRyo/websocket-iot-server#readme",
  "dependencies": {
    "babelify": "^7.3.0",
    "browserify": "^14.3.0",
    "chalk": "^1.1.3",
    "express": "^4.15.2",
    "forever": "^0.15.3",
    "history": "^4.6.1",
    "jsonwebtoken": "^7.3.0",
    "mongoose": "^4.9.5",
    "pify": "^2.3.0",
    "socket.io": "^1.7.3",
    "switz": "^0.0.17"
  },
  "devDependencies": {
    "ava": "^0.19.1",
    "babel-cli": "^6.24.1",
    "babel-core": "^6.24.1",
    "babel-eslint": "^7.2.2",
    "babel-loader": "^6.4.1",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-preset-env": "^1.3.3",
    "eslint": "^3.19.0",
    "eslint-plugin-ava": "^4.2.0",
    "eslint-plugin-import": "^2.2.0",
    "nodemon": "^1.11.0",
    "sinon": "^2.1.0",
    "webpack": "^2.3.3",
    "webpack-dev-server": "^2.4.2",
    "webpack-node-externals": "^1.6.0"
  }
}
